<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>No completados</h1>
      <table class="table">
        <thead>
          <tr>
          <th>Descripción</th>
          <th>Completado</th>

          <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
        <% @todos.each do |todo| %>
        <tr>
          <td><%= todo.description %></td>
          <td><%= todo.completed, completed = false %></td>
        </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-6">
      <h1>Completados</h1>
      <table class="table">
        <thead>
          <tr>
          <th>Descripción</th>
          <th>Completado</th>

          <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
        <% @todos.each do |todo| %>
        <tr>
          <td><%= todo.description %></td>
          <td><%= todo.completed, completed = true %></td>
        </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
